{% import 'components/index.njk' as components %}

{% set title = props.title or '' %}
{% set description = props.description or '' %}
{% set details = props.details or '' %}
{% set src = props.src or '' %}

<div class="intro">
  <div class="container container--extra-narrow rich-text">

    {% if src %}
      {{ components.render('cloudinaryImage', {
        src: src,
        width: 100,
        height: 100,
        transforms: [
          {
            width: 100,
            height: 100
          },
          {
            width: 250,
            height: 250
          },
          {
            width: 500,
            height: 500
          }
        ]
      }) }}
    {% endif %}

    <h1>{{ title }}</h1>

    {% if description %}
      <p>{{ description }}</p>
    {% endif %}

    {% if details %}
      <div class="details">
        <h2 class="sr-only">Details</h2>
        {{ details|safe }}
      </div>
    {% endif %}

  </div>
</div>
